{% extends 'base.html.twig' %}

{% block title %}Section de base {% endblock %}

{% block body %}
    <div class="overflow-hidden">
        <div class="logo">
            <div class="logo-icon" data-aos="fade-right" data-aos-easing="ease-in-sine" data-aos-duration="2000">
                <img src="{{ absolute_url(asset('frontend/img/logo-cvav.png')) }}" alt="" class="img-fluid activite">
            </div>
            <div class="logo-text" data-aos="fade-left" data-aos-easing="ease-in-sine" data-aos-duration="2000">
                <h2 class="titre-activite">
                    M'bonoua 2024
                </h2>
                <h3>Inscription camp de formation niveau II et Sup√©rieur</h3>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="formulaire" data-aos="fade-up" data-aos-easing="linear" data-aos-duration="2000">
            <div class="text-center mt-5 mb-5" data-aos="zoom-out" data-aos-duration="3000" data-aos-easing="ease-in-back">
                <h2 class="titre">Section de base</h2>
            </div>
            <form>
                <div class="row form-group">
                    <div class="col-12 col-md-6 col-lg-4 mt-4">
                        <label for="selectVicariat">Vicariat</label>
                        <select name="selectVicariat" id="selectVicariat" class="form-select form-select-lg" data-placeholder="Selectionnez votre vicariat" required>
                            <option value=""></option>
                            {% for vicariat in vicariats %}
                                <option value="{{ vicariat.id }}">{{ vicariat.nom }}</option>
                            {% endfor %}
                        </select>
                    </div>
                    <div class="col-12 col-md-6 col-lg-4 mt-4">
                        <label for="selectDoyenne">Doyenne</label>
                        <select name="selectDoyenne" id="selectDoyenne" class="form-select form-select-lg" required>
                        </select>
                    </div>
                    <div class="col-12 col-md-6 col-lg-4 mt-4">
                        <label for="selectSection">Section de base</label>
                        <select name="selectSection" id="selectSection" class="form-select form-select-lg" required>
                        </select>
                    </div>
                    <div class="col-12 col-md-6 mt-4">
                        <label for="selectSection">Nom et prenoms du responsable de section</label>
                        <input type="text" class="form-control form-control-lg" name="_responsable" id="inputResponsable" autocomplete="off" required>
                    </div>
                    <div class="col-12 col-md-6 mt-4">
                        <label for="selectSection">Contact de votre responsable de section</label>
                        <input type="tel" class="form-control form-control-lg" name="_contact" id="inputContact" autocomplete="off" required>
                    </div>
                    <div class="col-6 mt-5 mb-3 d-grid gap-2">
                        <a href="{{ path('app_frontend_inscription_justificatif') }}" class="btn btn-outline-secondary btn-lg">Annuler</a>
                    </div>
                    <div class="col-6 mt-5 mb-3 d-grid gap-2">
                        <button type="submit" class="btn btn-primary btn-lg">Suivant</button>
                    </div>
                </div>
                
            </form>
        </div>
    </div>
    <div id="loader-overlay" style="display: none">
        <div class="loader"></div>
    </div>
{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/select2@4.0.13/dist/css/select2.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/select2-bootstrap-5-theme@1.3.0/dist/select2-bootstrap-5-theme.min.css" />
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
