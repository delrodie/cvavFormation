                            //}
                        // });

                    },
                    error: function(xhr, status, error) {
                        // G√©rez les erreurs ici (par exemple, affichez un message d'erreur)
                        Swal.fire({
                            icon: 'error',
                            title: 'Erreur!',
                            text: 'Une erreur s\'est produite lors de l\'inscription. Veuillez r√©essayer plus tard.'
                        });
                    }
                });
