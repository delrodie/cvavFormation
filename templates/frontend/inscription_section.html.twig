    <script src="https://cdn.jsdelivr.net/npm/axios@1.6.8/dist/axios.min.js"></script>

    <script>
        $(document).ready(function() {
            $('#selectVicariat').on('change', function(){
                let vicariatId = $(this).val();
                console.log(vicariatId);
                $.getJSON("{{ absolute_url(path('app_api_doyenne_list')) }}", {'vicariat_id': vicariatId})
                    .done(response => {
                        console.log(response)
                        $('#selectDoyenne').empty()
                            .append("<option value=''>-</option>");

                        $('#selectSection').empty()
                            .append("<option value=''>-</option>");

                        // Ajouter les nouvelles options √† partir de la r√©ponse de la requ√™te
                        $.each(response, function(index, doyenne) {
                            $('#selectDoyenne').append($('<option>', {
                                value: doyenne.id,
                                text: doyenne.nom
                            }));
                        });
                    })
                    .fail((xhr, status, error)=>{
                        console.log(`Une erreur s'est produite lors de la r√©cup√©ration de la liste des doyennes: ${error}`)
                    })
            });

            $('#selectDoyenne').on('change', function(){
