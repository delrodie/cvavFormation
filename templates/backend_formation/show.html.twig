{% extends 'base.html.twig' %}

{% block title %}Formation{% endblock %}

{% block body %}
    <h1>Formation</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ formation.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ formation.nom }}</td>
            </tr>
            <tr>
                <th>Lieu</th>
                <td>{{ formation.lieu }}</td>
            </tr>
            <tr>
                <th>Montant</th>
                <td>{{ formation.montant }}</td>
            </tr>
            <tr>
                <th>DebutAt</th>
                <td>{{ formation.debutAt ? formation.debutAt|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>FinAt</th>
                <td>{{ formation.finAt ? formation.finAt|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>DateLineAt</th>
                <td>{{ formation.dateLineAt ? formation.dateLineAt|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_backend_formation_index') }}">back to list</a>

    <a href="{{ path('app_backend_formation_edit', {'id': formation.id}) }}">edit</a>

    {{ include('backend_formation/_delete_form.html.twig') }}
{% endblock %}
